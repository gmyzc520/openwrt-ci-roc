CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq60xx=y
CONFIG_TARGET_MULTI_PROFILE=y
CONFIG_TARGET_DEVICE_qualcommax_ipq60xx_DEVICE_jdcloud_re-ss-01=y
#CONFIG_TARGET_DEVICE_qualcommax_ipq60xx_DEVICE_jdcloud_re-cs-02=y
#CONFIG_TARGET_DEVICE_PACKAGES_qualcommax_ipq60xx_DEVICE_jdcloud_re-cs-02="luci-app-athena-led luci-i18n-athena-led-zh-cn"
#CONFIG_TARGET_DEVICE_qualcommax_ipq60xx_DEVICE_jdcloud_re-cs-07=y
#CONFIG_TARGET_DEVICE_PACKAGES_qualcommax_ipq60xx_DEVICE_jdcloud_re-cs-07="luci-app-lucky luci-app-gecoosac luci-app-dockerman"

CONFIG_ATH11K_MEM_PROFILE_512M=y
CONFIG_NSS_FIRMWARE_VERSION_12_5=y


# ================ 二、大根分区 & 文件系统配置（根治 /dev/root 100%） ================
CONFIG_TARGET_ROOTFS_PARTSIZE=1024
CONFIG_TARGET_ROOTFS_EXT4FS=y
# 关闭 squashfs 格式（避免冲突，仅保留 ext4）
# CONFIG_TARGET_ROOTFS_SQUASHFS is not set

# ================ 三、硬件性能优化（释放 IPQ6010 芯片潜力） ================
CONFIG_CPU_FREQ_GOV_PERFORMANCE=y
# CONFIG_CPU_FREQ_GOV_ONDEMAND is not set  
CONFIG_KERNEL_HUGETLBFS=y
CONFIG_KERNEL_HUGETLB_PAGE=y
CONFIG_PACKAGE_kmod-mmc=y
CONFIG_PACKAGE_kmod-sdhci=y
CONFIG_PACKAGE_kmod-sdhci-pltfm=y
CONFIG_PACKAGE_kmod-nls-utf8=y
CONFIG_KERNEL_NET_DEV_CHECKSUM=y
CONFIG_PACKAGE_kmod-nf-conntrack-netlink=y

# ================ 四、网络稳定性 & WiFi 6 满血优化 ================
# 无线驱动（QCA6010 专属，WiFi 6 支持）
CONFIG_PACKAGE_kmod-ath11k=y
CONFIG_PACKAGE_ath11k-firmware-qca6010=y
CONFIG_PACKAGE_kmod-mac80211=y
CONFIG_PACKAGE_hostapd-utils=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_KERNEL_CFG80211_DEBUGFS=y
CONFIG_PACKAGE_kmod-cfg80211=y

# 千兆网口硬件加速（IPQ60xx 专属）
CONFIG_PACKAGE_kmod-qca-nss-dp=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-gmac=y







